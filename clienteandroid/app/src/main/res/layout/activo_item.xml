<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:layout_marginBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivCirEstadoAct"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/circle"
            tools:layout_editor_absoluteX="27dp"
            tools:layout_editor_absoluteY="108dp" />

        <TextView
            android:id="@+id/tvIdAct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:text="ID: 5"
            app:layout_constraintLeft_toLeftOf="@+id/ivCirEstadoAct"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="11dp" />

        <TextView
            android:id="@+id/tvRevisionAct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="REVISADO"
            app:layout_constraintLeft_toRightOf="@+id/tvIdAct"
            app:layout_constraintRight_toLeftOf="@+id/tvIdItem"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="176dp"
            tools:layout_editor_absoluteY="11dp" />

        <TextView
            android:id="@+id/tvIdItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:text="Item ID: 1"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="336dp"
            tools:layout_editor_absoluteY="11dp" />

        <TextView
            android:id="@+id/tvNomAct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:text="Nombre Activo"
            app:layout_constraintLeft_toLeftOf="@+id/ivCirEstadoAct"
            app:layout_constraintTop_toBottomOf="@+id/tvIdAct"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="43dp" />

        <TextView
            android:id="@+id/tvDesItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="Esto es un activo ..."
            app:layout_constraintLeft_toRightOf="@+id/tvNomAct"
            app:layout_constraintTop_toBottomOf="@+id/tvRevisionAct"
            tools:layout_editor_absoluteX="145dp"
            tools:layout_editor_absoluteY="43dp" />


        <TextView
            android:id="@+id/tvEstadoRevisionAct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:text="CORRECTO"
            app:layout_constraintLeft_toLeftOf="@+id/ivCirEstadoAct"
            app:layout_constraintTop_toBottomOf="@+id/tvDesItem"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="84dp" />

        <TextView
            android:id="@+id/tvObsAct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:paddingBottom="10dp"
            android:text="Observacion ..."
            app:layout_constraintLeft_toRightOf="@+id/tvEstadoRevisionAct"
            app:layout_constraintTop_toBottomOf="@+id/tvDesItem"
            tools:layout_editor_absoluteX="144dp"
            tools:layout_editor_absoluteY="83dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>