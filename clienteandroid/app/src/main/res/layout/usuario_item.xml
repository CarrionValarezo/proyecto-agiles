<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:layout_marginBottom="8dp"
    android:orientation="vertical">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvCantObsUsuario"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/circle"/>
        <TextView
            android:id="@+id/tvNombreUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:textSize="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintLeft_toRightOf="@+id/tvCantObsUsuario"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/tvApellidoUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apellido"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:paddingBottom="5dp"
            app:layout_constraintLeft_toRightOf="@id/tvCantObsUsuario"
            app:layout_constraintTop_toBottomOf="@+id/tvNombreUsuario"
            />
        <TextView
            android:id="@+id/tvCantActivosUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Activos: 5"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            app:layout_constraintRight_toLeftOf="@+id/tvCedulaUsuario"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/tvCedulaUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0804389326"
            android:textSize="22dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>